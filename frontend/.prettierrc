{
	"useTabs": true,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 100,
	"tabWidth": 4,
	"semi": false,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": ["*.svelte"],
			"options": {
				"parser": "svelte"
			}
		},
		{
			"files": ["*.css", "*.scss", "*.less"],
			"options": {
				"tabWidth": 4,
				"useTabs": true
			}
		}
	],
	"tailwindStylesheet": "./src/app.css"
}
